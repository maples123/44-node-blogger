doctype html
html
	hend
		title 后台管理
		meta(charset="utf-8")
		meta(name="author", content="fengyu")
		link(rel="stylesheet", href="/layui/css/layui.css")
		link(rel="stylesheet", href="/css/nav.css")
		script(src="/layui/layui.js")
		style.
			.blog-header{
				height:60px;
			}
			.layui-side,.layui-body{
				top:60px;
			}
			ul.layui-nav.blog-user{
				float:right;
			}
			.layui-body{
				padding:10px;
				color:#111;
			}
	body
		// 导航
		.blog-header.layui-bg-black
			.layui-container
				ul.layui-nav
					li.layui-nav-item#haha
						a(href="/")
							i.layui-icon.layui-icon-home 
							| 首页
				//- 用户登录按钮
				ul.layui-nav.blog-user
					li.layui-nav-item
						a(href="/user/logout") 退了
		// 左侧导航
		.layui-side.layui-bg-black
			.layui-side-scroll
				ul(lay-filter="list").layui-nav.layui-nav-tree
					if role > 1
						li.layui-nav-item
							a(href="/admin/user") 用户管理
					li.layui-nav-item
						a(href="/admin/article") 文章管理
					li.layui-nav-item
						a(href="/admin/comment") 评论管理
					li.layui-nav-item
						a(href="/admin/userface") 头像上传

		.layui-body
			block main

block scripts
	script.
		layui.use("element",function(){
			const element = layui.element;
			const $ = layui.$;

			$("a").each(function (i,v){

				const fl = $(v).prop("href");
				
				if(fl === location.href){
					$("li").eq(i).addClass("layui-this");
				}
			})
		})

